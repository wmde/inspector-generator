{
    "name": "wmde/spy-generator",
    "description": "Code generation tool for private class inspection",
    "require": {
        "nette/php-generator": "^4.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Wmde\\SpyGenerator\\": "src/"
        }
    },
	"autoload-dev": {
        "psr-4": {
            "Wmde\\SpyGenerator\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Gabriel Birke",
            "email": "gabriel.birke@wikimedia.de"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan": "^1.4",
        "vimeo/psalm": "^4.22",
        "psalm/plugin-phpunit": "^0.16.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
	"scripts": {
		"test": "vendor/bin/phpunit",
		"phpstan": "vendor/bin/phpstan",
		"psalm": "vendor/bin/psalm",
		"cs": "vendor/bin/phpcs -s src tests",
		"fix-cs": "vendor/bin/phpcbf src tests",
		"ci": [
			"@test",
			"@cs",
			"@phpstan",
			"@psalm"
		]
	},
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
